{
  "manifest_version": 2,
  "name": "expendable",
  "version": "1.0.0",
  
  "description": "A Firefox extension to create single-use bookmarks.",
  "homepage_url": "https://github.com/Haplo-Dragon/expendable/issues",
  "icons": {
    "48": "icons/star-expendable-48.png",
    "96": "icons/star-expendable-95.png"
  },
  
  "author": "Ethan Fulbright",
  
  "permissions": [
    "bookmarks",
    "tabs"
  ],

  "browser_action": {
    "browser_style": true,
    "default_icon": "icons/star-expendable-48.png",
    "default_title": "Expendable"
  },

  "background": {
    "scripts": ["dist/background.js"]
  }

